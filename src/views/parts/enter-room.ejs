<section>
  <h2>Entre como participante</h2>
  <form action="/enterroom" method="post">
    <!-- sr-only, ficará invisível para o usuário, porém visível para motores de busca, bom para acessibilidade -->
    <label class="sr-only" for="room-id">Código da sala</label>
    <input
      name="roomId"
      type="number"
      id="room-id"
      placeholder="Código da sala"
    />

    <button>
      <img src="images/enter-room.svg" alt="Entrar na sala" />
      Entrar na sala
    </button>
  </form>
</section>

<!-- Div responsável do separador de linha "---- ou ----" que não necessita de uma tag "section"-->
<div class="separator">
  <div></div>
  <div>ou</div>
  <div></div>
</div>

<section>
  <h2>Crie sua própria sala de forma fácil</h2>

  <!-- Em vez de um botão, criamos uma tag "a" para esse button -->
  <a href="/create-pass" class="button outlined">
    <img src="images/users.svg" alt="Criar sala " />
    Criar sala
  </a>
</section>
